@model SystemsOfLinearEquations.ViewModels.SolutionModel

@{
    ViewBag.Title = "Solution";
}

@section NavigationListItems
{
    <li class="active">
        @Html.ActionLink("Solve", "Index")
    </li>
    <li>
        @Html.ActionLink("About", "About")
    </li>
}

@if (Model.Solution == null)
{
    <h3>Determinant is 0. Cramer's rule cannot be used.</h3>
}
else
{
    <h5>Solution:</h5>
    int i = 1;
    foreach (var x in Model.Solution)
    {
        <p>x@(i++) = @x</p>
    }
    <h6>Evaluation time: @(Model.TaskTime) ms.</h6>}
